@model TatBlog.WebApp.Areas.Admin.Models.AuthorEditModel
@{
    ViewData["PageTitle"] = "Thêm/Cập nhật Tác giả";
}

<h1>Thêm/cập nhật bài viết</h1>

<form asp-area="Admin"
        asp-controller="Author"
        asp-action="Edit"
        enctype="multipart/form-data"
        method="post">
        <div asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="Id"/>

      
        <div class="row mb-3">
            <label asp-for="FullName"
            class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="FullName">
                <span asp-validation-for="FullName"
                class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <label asp-for="UrlSlug"
            class="col-sm-2 col-form-lable"></label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="UrlSlug" >
                <span asp-validation-for="UrlSlug" class="text-danger"></span>
            </div>
        </div>

       
          <div class="row mb-3">
            <label asp-for="Email"
                   class="col-sm-2 col-form-lable"></label>
            <div class="col-sm-10">
                <textarea class="form-control" asp-for="Email"></textarea>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>


         <div class="row mb-3">
            <label asp-for="Notes"
                   class="col-sm-2 col-form-lable"></label>
            <div class="col-sm-10">
                <textarea class="form-control" asp-for="Notes"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">
                Lưu các thay đổi
            </button>

            <a asp-area="Admin"
            asp-controller="Categoríes"
            asp-action="Index"
            class="btn btn-danger">
                Hủy & Quay lại
            </a>
        </div>
</form>

