@model IList<CategoryItem>

<div class="mb-4">
    <h3 class="text-success mb-2">
        Các chủ đề
    </h3>

    <ul class="list-group">
        @foreach(var item in Model)
        {
            <li class="list-group-item">
                <a asp-action="Category"
                   asp-controller="Blog"
                   asp-route-slug="@item.UrlSlug"
                   title="@item.Description">
                 @item.Name
                 <span>(@item.PostCount)</span>
                </a>
            </li>
        }
    </ul>
</div>