@model IList<AuthorItem>

<div class="mb-4">
    <h3 class="text-success mb-2">
        Các tác giả tiêu biểu
    </h3>

    <ul class="list-group">
        @foreach(var item in Model)
        {
            <li class="list-group-item">
                <a asp-controller="Blog"
                   asp-action="Author"
                   asp-route-slug="@item.UrlSlug"
                   title="Author: @item.FullName">
                   @item.FullName
                   <span>(@item.PostCount bài viết)</span>
               </a>
            </li>
        }
    </ul>
</div>